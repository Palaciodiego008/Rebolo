<h1>Edit {{.Name}}</h1>
<form method="POST" action="/{{.RoutePath}}/{{{{.ID}}}}" style="max-width: 500px; text-align: left;">
    <input type="hidden" name="_method" value="PUT">
{{range .Fields}}{{if eq .HTMLType "textarea"}}    <div class="form-group">
        <label><strong>{{.Name}}:</strong></label>
        <textarea name="{{.FormName}}" rows="4">{{{{{{.}}{{.Name}}}}}}</textarea>
    </div>
{{else if eq .HTMLType "checkbox"}}    <div class="form-group">
        <label><input type="checkbox" name="{{.FormName}}" value="true" {{{{if .{{.Name}}}}}}checked{{{{end}}}}> <strong>{{.Name}}</strong></label>
    </div>
{{else}}    <div class="form-group">
        <label><strong>{{.Name}}:</strong></label>
        <input type="{{.HTMLType}}" name="{{.FormName}}" value="{{{{{{.}}{{.Name}}}}}}">
    </div>
{{end}}{{end}}    <div style="margin-top: 1rem;">
        <button type="submit" class="btn" style="background: #2196F3;">Update {{.Name}}</button>
        <a href="/{{.RoutePath}}/{{{{.ID}}}}" class="btn" style="background: #666; margin-left: 10px;">Cancel</a>
    </div>
</form>

