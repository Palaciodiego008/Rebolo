<h1>New {{.Name}}</h1>
<form method="POST" action="/{{.RoutePath}}" style="max-width: 500px; text-align: left;">
{{range .Fields}}{{if eq .HTMLType "textarea"}}    <div class="form-group">
        <label><strong>{{.Name}}:</strong></label>
        <textarea name="{{.FormName}}" rows="4"></textarea>
    </div>
{{else if eq .HTMLType "checkbox"}}    <div class="form-group">
        <label><input type="checkbox" name="{{.FormName}}" value="true"> <strong>{{.Name}}</strong></label>
    </div>
{{else}}    <div class="form-group">
        <label><strong>{{.Name}}:</strong></label>
        <input type="{{.HTMLType}}" name="{{.FormName}}">
    </div>
{{end}}{{end}}    <div style="margin-top: 1rem;">
        <button type="submit" class="btn">Create {{.Name}}</button>
        <a href="/{{.RoutePath}}" class="btn" style="background: #666; margin-left: 10px;">Cancel</a>
    </div>
</form>

